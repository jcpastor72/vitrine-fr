                        <option value="EN_ATELIER">üîß En atelier</option>
                        <option value="EN_STOCK">üì¶ En stock</option>
                        <option value="EN_LIVRAISON">üöõ En livraison</option>
                        <option value="LIVREE">‚úÖ Livr√©e</option>
                        <option value="ACTIVE">üü¢ Active</option>
                        <option value="RETOUR_SAV">üîÑ Retour SAV</option>
                        <option value="RECEPTION_SAV">üì• R√©ception SAV</option>
                        <option value="REMPLACEE">üîÅ Remplac√©e</option>
                        <option value="ARCHIVEE">üìÅ Archiv√©e</option>
                        <option value="INACTIVE">‚ö´ Inactive</option>
                    </select>
