@page "/admin/rfid-chips"
@layout AdminLayout
@using LaborControl.Web.Models
@using LaborControl.Web.Services
@inject ApiService ApiService

<h2 class="text-2xl font-bold mb-4">Gestion des Puces RFID</h2>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <strong>Erreur:</strong> @errorMessage
    </div>
}

@if (isLoading)
{
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded">
        <p>Chargement des puces RFID...</p>
    </div>
}
else if (chips == null)
{
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
        <p>Erreur: La réponse de l'API est null</p>
    </div>
}
else if (!chips.Any())
{
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
        <p>Aucune puce RFID trouvée (liste vide)</p>
    </div>
}
else
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <p>✓ @chips.Count puce(s) trouvée(s)</p>
    </div>
    
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID Puce</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">UID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date activation</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var chip in chips)
                {
                    <tr>
                        <td class="px-6 py-4">@chip.ChipId</td>
                        <td class="px-6 py-4">@chip.Uid</td>
                        <td class="px-6 py-4">@chip.CustomerName</td>
                        <td class="px-6 py-4">
                            <span class="@GetStatusClass(chip.Status)">
                                @chip.Status
                            </span>
                        </td>
                        <td class="px-6 py-4">@chip.ActivationDate.ToString("dd/MM/yyyy")</td>
                        <td class="px-6 py-4">
                            <button class="text-blue-600 hover:underline mr-2">Modifier</button>
                            <button class="text-red-600 hover:underline">Supprimer</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<button class="mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
    Nouvelle puce
</button>

@code {
    private List<RfidChipResponse>? chips;
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            chips = await ApiService.GetRfidChipsAsync();
            Console.WriteLine($"Chips loaded: {chips?.Count ?? 0}");
        }
        catch (Exception ex)
        {
            errorMessage = $"{ex.Message} | {ex.InnerException?.Message}";
            Console.WriteLine($"Error loading chips: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusClass(string status)
    {
        return status?.ToUpper() switch
        {
            "ACTIVE" => "px-2 py-1 bg-green-100 text-green-800 rounded",
            "INACTIVE" => "px-2 py-1 bg-gray-100 text-gray-800 rounded",
            _ => "px-2 py-1 bg-yellow-100 text-yellow-800 rounded"
        };
    }
}
