}

@code {
    // Constantes pour les actions
    private const string ActionReceiveFromSupplier = "receive-from-supplier";
    private const string ActionEncode = "encode";
    private const string ActionShipToClient = "ship-to-client";
    private const string ActionConfirmDelivery = "confirm-delivery";
    private const string ActionAssignToControlPoint = "assign-to-controlpoint";
    private const string ActionRequestSav = "request-sav";
    private const string ActionDeactivate = "deactivate";
    private const string ActionReceiveSav = "receive-sav";
    private const string ActionReplace = "replace";
    private const string ActionDelete = "delete";

    private List<RfidChipDto> allChips = new();
    private List<RfidChipDto> filteredChips = new();
    private bool isLoading = true;

    private string selectedStatus = "";
    private string searchUid = "";

    private bool showAddManualModal = false;
    private string manualUid = "";
    private string addManualError = "";
    private bool isAddingManual = false;

    private bool showDetailModal = false;
    private RfidChipDto? selectedChip = null;

    private bool showDeleteConfirmModal = false;
    private string deleteConfirmMessage = "";
    private Func<Task>? pendingDeleteAction = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization =
                new AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetAsync("api/rfidchips");
            if (response.IsSuccessStatusCode)
            {
                allChips = await response.Content.ReadFromJsonAsync<List<RfidChipDto>>() ?? new();
                filteredChips = new List<RfidChipDto>(allChips);
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Erreur: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Erreur: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterData()
    {
        filteredChips = allChips.Where(c =>
        {
            if (!string.IsNullOrEmpty(selectedStatus) && c.Status != selectedStatus)
                return false;
            if (!string.IsNullOrEmpty(searchUid) && !c.Uid.Contains(searchUid, StringComparison.OrdinalIgnoreCase))
                return false;
            return true;
        }).ToList();
    }

    private void ClearFilters()
    {
        selectedStatus = "";
        searchUid = "";
        FilterData();
    }

    private void NavigateToDashboard()
    {
        Navigation.NavigateTo("/admin-lc/dashboard");
    }

    private void OpenAddManualModal()
    {
        showAddManualModal = true;
        manualUid = "";
        addManualError = "";
    }

    private void CloseAddManualModal()
    {
        showAddManualModal = false;
        manualUid = "";
        addManualError = "";
    }

    private async Task HandleManualUidKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await AddManualChip();
        }
    }

    private async Task AddManualChip()
    {
        if (string.IsNullOrWhiteSpace(manualUid))
        {
            addManualError = "Veuillez entrer un UID";
            return;
        }

        isAddingManual = true;
        addManualError = "";

        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization =
                new AuthenticationHeaderValue("Bearer", token);

            var request = new { uid = manualUid };
            var response = await Http.PostAsJsonAsync("api/rfidchips/register-single", request);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("showNotification", "Puce ajout√©e avec succ√®s");
                CloseAddManualModal();
                await LoadData();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                addManualError = $"Erreur: {response.StatusCode} - {errorContent}";
            }
        }
        catch (Exception ex)
        {
            addManualError = $"Erreur: {ex.Message}";
        }
        finally
        {
            isAddingManual = false;
        }
    }

    private void ViewChipDetails(Guid chipId)
    {
        selectedChip = allChips.FirstOrDefault(c => c.Id == chipId);
        if (selectedChip != null)
        {
            showDetailModal = true;
        }
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedChip = null;
    }

    private void OpenDeleteConfirmModal()
    {
        if (selectedChip == null) return;
        deleteConfirmMessage = $"√ätes-vous s√ªr de vouloir supprimer la puce {selectedChip.ChipId} ?";
        showDeleteConfirmModal = true;
    }

    private void CloseDeleteConfirmModal()
    {
        showDeleteConfirmModal = false;
        deleteConfirmMessage = "";
        pendingDeleteAction = null;
    }

    private async Task ConfirmDelete()
    {
        if (selectedChip == null) return;

        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization =
                new AuthenticationHeaderValue("Bearer", token);

            var response = await Http.DeleteAsync($"api/rfidchips/{selectedChip.Id}");

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("showNotification", "Puce archiv√©e avec succ√®s");
                CloseDeleteConfirmModal();
                CloseDetailModal();
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Erreur: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Erreur: {ex.Message}");
        }
    }

    private async Task ExecuteAction(string action)
    {
        if (selectedChip == null) return;

        try
        {
            var token = await AuthService.GetTokenAsync();
            Http.DefaultRequestHeaders.Authorization =
                new AuthenticationHeaderValue("Bearer", token);

            HttpResponseMessage response = null;

            switch (action)
            {
                case "receive-from-supplier":
                    response = await Http.PutAsJsonAsync($"api/rfidchips/{selectedChip.Id}/receive-from-supplier", new { supplierOrderId = "AUTO" });
                    break;
                case "encode":
                    response = await Http.PutAsync($"api/rfidchips/{selectedChip.Id}/encode", null);
                    break;
                case "ship-to-client":
                    response = await Http.PutAsJsonAsync($"api/rfidchips/{selectedChip.Id}/ship-to-client", new { clientOrderId = "AUTO" });
                    break;
                case "confirm-delivery":
                    response = await Http.PutAsJsonAsync($"api/rfidchips/{selectedChip.Id}/confirm-delivery", new { packagingCode = selectedChip.PackagingCode ?? "" });
                    break;
                case "assign-to-controlpoint":
                    var cpId = await JS.InvokeAsync<string>("prompt", "ID du point de contr√¥le:");
                    if (!string.IsNullOrEmpty(cpId) && Guid.TryParse(cpId, out var cpGuid))
                    {
                        response = await Http.PutAsJsonAsync($"api/rfidchips/{selectedChip.Id}/assign-to-controlpoint", new { controlPointId = cpGuid });
                    }
                    break;
                case "request-sav":
                    var reason = await JS.InvokeAsync<string>("prompt", "Raison du SAV:");
                    if (!string.IsNullOrEmpty(reason))
                    {
                        response = await Http.PostAsJsonAsync($"api/rfidchips/{selectedChip.Id}/request-sav", new { reason });
                    }
                    break;
                case "receive-sav":
                    response = await Http.PutAsync($"api/rfidchips/{selectedChip.Id}/receive-sav", null);
                    break;
                case "replace":
                    var newChipId = await JS.InvokeAsync<string>("prompt", "ID de la nouvelle puce:");
                    if (!string.IsNullOrEmpty(newChipId) && Guid.TryParse(newChipId, out var newGuid))
                    {
                        response = await Http.PutAsJsonAsync($"api/rfidchips/{selectedChip.Id}/replace", new { replacementChipId = newGuid });
                    }
                    break;
                case "deactivate":
                case "delete":
                    response = await Http.DeleteAsync($"api/rfidchips/{selectedChip.Id}");
                    break;
            }

            if (response != null && response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("showNotification", "Action ex√©cut√©e avec succ√®s");
                CloseDetailModal();
                await LoadData();
            }
            else if (response != null)
            {
                await JS.InvokeVoidAsync("alert", $"Erreur: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Erreur: {ex.Message}");
        }
    }

